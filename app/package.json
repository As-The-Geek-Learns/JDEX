{
  "name": "jdex",
  "version": "2.0.1",
  "type": "module",
  "description": "Johnny Decimal Index Manager - Personal Knowledge Organization System",
  "author": {
    "name": "James Cruce",
    "email": "james@astgl.com",
    "url": "https://astgl.com"
  },
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/As-The-Geek-Learns/JDEX#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/As-The-Geek-Learns/JDEX.git"
  },
  "bugs": {
    "url": "https://github.com/As-The-Geek-Learns/JDEX/issues"
  },
  "keywords": [
    "johnny-decimal",
    "organization",
    "productivity",
    "file-management",
    "knowledge-management"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:linux": "vite build && electron-builder --linux",
    "icons": "node scripts/generate-icons.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky || true",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ci": "vitest run --reporter=verbose --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:unit": "vitest run --config vitest.config.unit.js",
    "test:unit:watch": "vitest --config vitest.config.unit.js",
    "test:integration": "vitest run --config vitest.config.integration.js",
    "test:integration:watch": "vitest --config vitest.config.integration.js",
    "test:e2e": "npx playwright test --config test/e2e/playwright.config.js",
    "test:e2e:headed": "npx playwright test --config test/e2e/playwright.config.js --headed",
    "test:e2e:debug": "npx playwright test --config test/e2e/playwright.config.js --debug"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lucide-react": "^0.564.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^2.12.0",
    "sql.js": "^1.9.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "lodash": "^4.17.23",
    "msw": "^2.7.0",
    "playwright": "^1.58.2",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.astgl.jdex",
    "productName": "JDex",
    "copyright": "Copyright Â© 2024-2026 James Cruce / ASTGL",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "scripts/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "JDex ${version}",
      "icon": "build/icon.icns",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ],
      "sign": "scripts/sign-windows.cjs",
      "publisherName": "FTL Consulting LLC"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}
